%ul.unstyled
  -if notifications.empty?
    %li.no-notifications
      You have no notifications yet.
  -else
    -notifications.group_by{|n| n.created_at.to_date}.each do |date, notifications_on_date|
      %li.date-divider.mt-2.mb-0
        .date-divider-line
        %span.message-date
          =date.today? ? 'Today' : "#{time_ago_in_words(date)} ago"
      -notifications_on_date.each do |notification|
        =render('notifications/notification', :notification => notification, :no_border => notifications_on_date.last == notification)
=link_to "View all notifications", notifications_path, :class => "all-link"